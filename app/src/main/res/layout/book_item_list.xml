<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="0dp"
    style="@style/CardView.Light"
    android:background="@drawable/grid_view_item"
    card_view:cardElevation="0dp"
    android:backgroundTint="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/book_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/grid_view_item"
            />
        <TextView
            android:id="@+id/book_title"
            android:layout_toEndOf="@id/book_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caricando titolo"
            android:textSize="18sp"
            android:fontFamily="@font/ps_bold"
            android:textColor="#202020"/>
        <TextView
            android:id="@+id/book_author"
            android:layout_below="@id/book_title"
            android:layout_toEndOf="@id/book_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caricando autori"
            android:paddingRight="20dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"/>
        <TextView
            android:id="@+id/book_price"
            android:layout_toEndOf="@id/book_thumbnail"
            android:layout_below="@id/book_author"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caricando prezzo"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>