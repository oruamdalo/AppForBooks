<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/class_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="5Ai"
        android:fontFamily="@font/ps_bold"
        android:textColor="@color/dot_light_screen3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:background="#fff"/>

    <TextView
        android:id="@+id/class_address"
        android:layout_below="@id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@id/class_name"
        android:layout_alignLeft="@id/class_name"
        android:textSize="12sp"
        android:text="5Ai"
        android:fontFamily="@font/roboto_italic"
        android:textColor="@color/dot_dark_screen3"
        android:textAlignment="center"
        android:background="#fff"/>

</RelativeLayout>